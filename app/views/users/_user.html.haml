.col-md-4
  .user-card
    .main
      .row
        .col-xs-4
          .picture
            = link_to image_tag(avatar_url(user)), user
        .col-xs-7.right
          %h3= link_to user.name, user
          .proposal-count
            = link_to pluralize(user.offers.count, 'Offer'), user
          .location
            <i class="fa fa-map-marker"></i>
            = user.location
          - if current_user
            .mail
              = mail_to user.email do |m|
                .btn.btn-small.btn-default
                  <i class="fa fa-envelope"></i>
            .facebook
              = link_to user.facebook_url do |u|
                .btn.btn-default
                  <i class="fa fa-facebook"></i>
        .col-xs-1
          - if user == current_user
            = link_to edit_user_path(user), id: "edit-profile" do |u|
              .btn.btn-primary
                <i class="fa fa-pencil"></i>

    - if !user.about.nil?
      .info
        = markdown(user.about)

  - if user == current_user and defined? show_create_link
    = link_to(new_user_offer_path(user)) do
      .proposal.new
        .main
          = raw("<i class='fa fa-plus'></i> Create a new offer")
