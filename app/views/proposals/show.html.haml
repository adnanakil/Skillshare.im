%h2#title= @proposal.title
#name= link_to @user.name, @user
#location= @proposal.location
#category= @proposal.category_list
#description= markdown(@proposal.description)
- if @user == current_user
  = link_to 'Edit', edit_proposal_path(@proposal)
  = link_to 'Delete', @proposal, method: :delete, data: { confirm: "Are you sure you want to delete this?" }
- else
  = mail_to @user.email, "E-mail #{@user.name} about this offer", subject: "#{@proposal.title}", target: "_blank"
