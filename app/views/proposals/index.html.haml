- unless current_user
  .landing
    .heading
      %h1
        Sharing Between Effective Altruists!
      %h3
        Coffee - Lodging - Mentorship - Capital - Used Goods - Connections - Online Labor

= render "shared/categories"

%table.table.proposals-table
  %thead
    %tr
      %th
      %th Proposal
      %th Location
      %th Type
  %tbody
    - @proposals.each do |proposal|
      - if proposal
        = render partial: "proposals/proposal", locals: { proposal: proposal }

= paginate @proposals, theme: 'twitter-bootstrap-3'
