%h1 Edit
.row
  .col-md-4
    = simple_form_for(@proposal, html: {class: 'form-horizontal' }) do |f|
      = f.error_notification
      = f.input :title
      = f.input :category_list, collection: @categories, include_blank: false, label: "Category"
      = f.input :description, input_html: {rows: 5}
      = f.hidden_field :proposal, value: true
      %br
      = f.button :submit, "Save"
