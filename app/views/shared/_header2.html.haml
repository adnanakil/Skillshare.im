.container.header
  .row
    .col-md-3
      .logo
        = link_to "SkillShare.im", root_path
    .col-md-6
      .logos
        .icons
          <i class="fa fa-gift"></i> <i class="fa fa-heart"></i> <i class="fa fa-globe"></i> 
    .col-md-3
    .right
      - if current_user
        .btn-group
          %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
            <i class="fa fa-user"></i>
            %span.caret
          %ul.dropdown-menu{role: "menu"}
            %li= link_to(current_user.name, current_user)
            %li= link_to "Sign Out", signout_path, id: "sign_out"
      - else
        %li= link_to "Sign In", signin_path, id: "sign_in"

