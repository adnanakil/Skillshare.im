.container.header
  .row
    .col-sm-3
      .logo
        = link_to "SkillShare.im", root_path
    .col-sm-6
      .logos
        .icons
          =link_to raw('<i class="fa fa-gift"></i>'), :proposals
          =link_to raw('<i class="fa fa-heart"></i>'), :users
          =link_to raw('<i class="fa fa-globe"></i>'), :map
    .col-sm-3
      .right
        .btn-group
          - if current_user
            %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
              <i class="fa fa-user"></i>
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li= link_to(current_user.name, current_user)
              %li= link_to "Sign Out", signout_path, id: "sign_out"
          - else
            = link_to "Sign in with Facebook", signin_path, class: "btn btn-primary facebook", role: "button"




