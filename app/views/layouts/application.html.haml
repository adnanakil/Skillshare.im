%html
  %head
    %meta{ charset: "utf-8" }
    %title Skillshare.im - #{yield(:title).presence || "Sharing Between Effective Altruists" }
    = favicon_link_tag "favicon.ico"

    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    %link{ rel: "stylesheet", href: "https://fonts.googleapis.com/css?family=Droid+Serif:400,700|Oregano" }

    = javascript_include_tag "application", "data-turbolinks-track" => true
    %script{ src: "//platform.twitter.com/widgets.js" }

    = auto_discovery_link_tag(:atom, proposals_atom_url(format: "atom"))
    = csrf_meta_tags

    - if content_for? :for_head
      = yield :for_head

  %body
    %div#fb-root

    %div#feedback
      %a{href: "mailto:#{ENV['SUPPORT_EMAIL']}?subject=Skillshare.im feedback", target: "_blank"} feedback

    = render "shared/banner"

    #wrap
      = render "shared/header"

      .container
        - flash.each do |name, msg|
          %div{ class: alert_type(name) }= msg

      .container
        = yield

    = render "shared/footer"

    %footer
      = render "layouts/analytics_tracking"

      = yield :footer

    - unless signed_in?
      %div#dialog{title: "Sign in or sign up"}
        = render "shared/sign_in"
